<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/item_view_margin"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/type_image"
        android:layout_width="@dimen/item_part_image_size"
        android:layout_height="@dimen/item_part_image_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_chest"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_name"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_view_margin"
        app:layout_constraintStart_toEndOf="@id/type_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item Name Here" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_rank"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_name"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        tools:text="HIGH" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/shield"
        android:layout_width="@dimen/item_defense_icon_size"
        android:layout_height="@dimen/item_defense_icon_size"
        app:layout_constraintStart_toStartOf="@id/middle_guideline"
        app:layout_constraintTop_toTopOf="@id/item_rank"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_shield" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_min_defense"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintTop_toTopOf="@id/item_rank"
        app:layout_constraintStart_toEndOf="@id/shield"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_marginStart="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="56+" />

    <ImageView
        android:id="@+id/slot_1"
        android:layout_width="@dimen/item_slot_image_size"
        android:layout_height="@dimen/item_slot_image_size"
        tools:src="@drawable/ic_twotone_looks_1_24"
        app:layout_constraintTop_toTopOf="@id/item_rank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/slot_2"
        />

    <ImageView
        android:id="@+id/slot_2"
        android:layout_width="@dimen/item_slot_image_size"
        android:layout_height="@dimen/item_slot_image_size"
        tools:src="@drawable/ic_twotone_looks_2_24"
        app:layout_constraintTop_toTopOf="@id/slot_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/slot_3"
        />

    <ImageView
        android:id="@+id/slot_3"
        android:layout_width="@dimen/item_slot_image_size"
        android:layout_height="@dimen/item_slot_image_size"
        tools:src="@drawable/ic_twotone_looks_3_24"
        app:layout_constraintTop_toTopOf="@id/slot_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/slot_4"
        />

    <ImageView
        android:id="@+id/slot_4"
        android:layout_width="@dimen/item_slot_image_size"
        android:layout_height="@dimen/item_slot_image_size"
        tools:src="@drawable/ic_twotone_looks_4_24"
        app:layout_constraintTop_toTopOf="@id/slot_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>